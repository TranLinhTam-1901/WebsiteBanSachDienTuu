<!-- CSS custom -->
<style>
    .card-book {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .card-book:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }
    .card-book img {
        transition: transform 0.3s;
    }
    .card-book:hover img {
        transform: scale(1.05);
    }
</style>


<!-- Bán chạy -->
<section class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-success">🔥 Sách bán chạy</h3>
        <a href="#" class="text-decoration-none fw-bold text-success">Xem thêm →</a>
    </div>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4">
        @foreach (var book in books)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0 card-book">
                    <img src="@book.Img" class="card-img-top" alt="@book.Title" />
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title text-truncate">@book.Title</h6>
                        <p class="text-muted small mb-1">by @book.Author</p>
                        <p class="mb-2">
                            <span class="fw-bold text-danger">$@book.Price</span>
                            @if (book.OldPrice != null)
                            {
                                <span class="text-muted text-decoration-line-through ms-1">
                                    $@book.OldPrice
                                </span>
                            }
                        </p>
                        <div class="mt-auto">
                            <a href="#" class="btn btn-success btn-sm w-100">Thêm vào giỏ hàng</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>


