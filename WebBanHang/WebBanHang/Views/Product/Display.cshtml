@model WebBanHang.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="row">
        <!-- Product image column -->
        <div class="col-md-4 text-center">
            <div class="border rounded shadow-sm p-2 bg-light">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl"
                         alt="Product Image"
                         class="img-fluid rounded"
                         style="max-height: 400px; object-fit: contain;" />
                }
                else
                {
                    <p class="text-muted">No image available</p>
                }
            </div>
        </div>

        <!-- Product information column -->
        <div class="col-md-8">
            <!-- Product name -->
            <h1 class="fw-bold">@Model.Name</h1>

            <!-- Price -->
            <h3 class="text-success mt-2 fw-bold">
                @Model.Price.ToString("C")
            </h3>

            <!-- Description -->
            <div class="mt-4">
                <h5 class="fw-semibold">Description</h5>
                <p class="text-justify">@Model.Description</p>
            </div>

            <!-- Category -->
            <div class="mt-3">
                <h5 class="fw-semibold">Category</h5>
                <p class="text-muted mb-1 small">
                    @Model.Category?.Name
                </p>
            </div>

            <!-- Action buttons -->
            <div class="mt-4">
                <a asp-action="Index" class="btn btn-outline-primary me-2">
                    ← Back to List
                </a>
                <a asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-warning">
                    Buy Now
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-warning {
        background-color: #FF9900;
        border: none;
        font-weight: 600;
    }

        .btn-warning:hover {
            background-color: #e68a00;
        }

    .text-justify {
        text-align: justify;
    }
</style>
